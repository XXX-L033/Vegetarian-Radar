<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0f1e3"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/titlerelativelayout"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#b1c0b4"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/Registration_back"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:onClick="onClick"
            android:paddingLeft="-55dp"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/Registration_title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:fontFamily="@font/font"
            android:paddingLeft="100dp"
            android:paddingTop="10dp"
            android:text="Register"
            android:textColor="#185524"
            android:textSize="40dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="502dp"
        android:background="@drawable/background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="465dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/word_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="Username："
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/Registration_username"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:alpha="0.8"
                    android:gravity="center_vertical"
                    android:hint="Please Enter Username"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/word_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="Password："
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/Registration_password"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:alpha="0.8"
                    android:gravity="center_vertical"
                    android:hint="Please Enter Password"
                    android:inputType="textPassword"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/word_password2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="Password："
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/Registration_password2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:alpha="0.8"
                    android:gravity="center_vertical"
                    android:hint="Please Re-Enter Password"
                    android:inputType="textPassword"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/word_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="Phone："
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/Registration_phone"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="35dp"
                    android:alpha="0.8"
                    android:gravity="center_vertical"
                    android:hint="Please Enter Phone Number"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="369dp"
                android:layout_height="49dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:textColor="#708090"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/cb_word"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:text="I confirm to information is complete, and have read and agree to the information provided" />
            </LinearLayout>


            <Button
                android:id="@+id/Registration_OK"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/login_ready"
                android:gravity="center"
                android:onClick="onClick"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Register"
                android:textColor="#000000"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

